ports:
  dns: 53
  http: 4000

upstreams:
  groups:
    # these external DNS resolvers will be used. Blocky picks 2 random resolvers from the list for each query
    default:
      # Cloudflare
      - tcp-tls:1.1.1.1:853
      - tcp-tls:9.9.9.9:853
conditional:
  mapping:
    "${SECRET_DOMAIN}": 172.16.16.3
# configuration of client name resolution
clientLookup:
  upstream: 172.16.16.3

ecs:
  useAsClient: true

prometheus:
  enable: true
  path: /metrics

